@model LaVitaLiving.Models.User
@{
    ViewBag.Title = "Home Page";
}
<div class="offset-5">
    @using (Html.BeginForm("Autherize", "Home", FormMethod.Post))
    {
    <form>
        <div class="form-group">
            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", placeholder = "UserName", required = "required" } })
        </div>
        <div class="form-group">
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @type = "password", @class = "form-control", placeholder = "Password", required = "required" } })
        </div>
        <button type="submit" class="btn btn-outline-info">Sign in</button>
        <button class="btn btn-outline-primary" > @Html.ActionLink("Register", "Register")</button>
        <button class="btn btn-outline-secondary">@Html.ActionLink("Forgot Password", "ForgotPassword")</button>
    </form>
    }
</div>