@model LaVitaLiving.Models.User
@{
    ViewBag.Title = "ForgotPassword";
}

<div class="offset-5">
    @using (Html.BeginForm("GetPassword", "Home", FormMethod.Post))
    {
        <form>
            <div class="form-group">
                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", placeholder = "UserName", required = "required" } })
            </div>
            <button type="submit" class="btn btn-outline-info">Get Password</button>
            @ViewBag.Message
        </form>
    }
</div>
