@model LaVita.Models.User
@{
    ViewBag.Title = "Home";
    ViewBag.Icon = "fa fa-home";
}

<div class="col-6 offset-3">
    @using (Html.BeginForm("Autherize", "Home", FormMethod.Post))
    {
    <form>
        <div class="row">
            <div class="form-group col-5">
                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control  col-12", placeholder = "UserName", required = "required" } })
            </div>
            <div class="form-group col-5">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @type = "password", @class = "form-control col-12", placeholder = "Password", required = "required" } })
            </div>
        </div>
        <div class="row offset-1">
            <button type="submit" class="btn btn-outline-success col-3 m-1">Sign in</button>
            <button class="btn btn-outline-info col-3 m-1"> @Html.ActionLink("Register", "Register")</button>
            <button class="btn btn-outline-info col-3 m-1">@Html.ActionLink("Forgot Password", "ForgotPassword")</button>
        </div>
    </form>
}
    </div>